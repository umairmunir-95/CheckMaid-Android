<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff"/>
                    <corners android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPrimary"
                        />
                    <padding android:bottom="3dp"
                        android:left="3dp"
                        android:right="10dp"
                        android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center"
                    android:src="@drawable/ic_dropdown"
                    />
            </item>
        </layer-list>
    </item>
</selector>