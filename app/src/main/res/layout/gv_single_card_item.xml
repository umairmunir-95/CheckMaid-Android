<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="@dimen/p10"
    card_view:cardCornerRadius="@dimen/p5"
    android:background="?attr/selectableItemBackground">

    <LinearLayout android:id="@+id/ll_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/p30"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_weight="0.3"
            android:layout_width="@dimen/p50"
            android:layout_height="@dimen/p50"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_users_white"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/by_user"
            android:textSize="@dimen/ts17"
            android:textColor="@color/white" />
    </LinearLayout>

</android.support.v7.widget.CardView>