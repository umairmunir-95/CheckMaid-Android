<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/common_header"
        layout="@layout/common_header" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/p100"
            >

            <TextView
                style="@style/FormLabels"
                android:id="@+id/tv_live_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/p40"
                android:layout_marginLeft="@dimen/p30"
                android:layout_marginRight="@dimen/p30"
                android:layout_marginBottom="@dimen/p30"
                android:drawableLeft="@drawable/ic_long_timer"
                android:hint="00 00 00"
                android:textColor="@color/colorPrimary" />
            <EditText
                android:id="@+id/et_find_property"
                android:visibility="gone"
                style="@style/FormSpinners"
                android:text="Property XYZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_straight_border"
                android:singleLine="true"
                android:drawableRight="@drawable/ic_dropdown"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/p10"
            >

            <TextView
                style="@style/FormLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property"
                android:visibility="gone"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_cleaning_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FormSpinners"
                android:background="@color/colorPrimary"
                android:text="@string/cleaning_guide"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/p10"
            >

            <TextView
                style="@style/FormLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property"
                android:visibility="gone"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_damage_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FormSpinners"
                android:background="@color/colorPrimary"
                android:text="@string/damage_report_heading"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/p10"
            >

            <TextView
                style="@style/FormLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/property"
                android:visibility="gone"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/FormSpinners"
                android:background="@color/colorPrimary"
                android:text="@string/finished"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
